<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.AdvertiseMapper">
    <select id="selectAll" resultType="com.example.demo.pojo.Advertise">
        select * from advertisements;
    </select>
    <select id="selectById" parameterType="Integer" resultType="com.example.demo.pojo.Advertise">
        select * from advertisements where advertisement_id = #{id};
    </select>
    <update id="updateStatus">
        update advertisements set status = #{status} where advertisement_id = #{id};
    </update>
</mapper>