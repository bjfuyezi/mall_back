<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.RecommendMapper">

    <insert id="insertRecommend" parameterType="com.example.demo.pojo.Recommend">
        INSERT INTO recommend (user_id, product_id, search)
        VALUES (#{userId}, #{productId}, #{search})
    </insert>

    <select id="selectRecommend" resultType="com.example.demo.pojo.Recommend">
        SELECT * FROM recommend
    </select>

</mapper>